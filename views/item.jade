.container
  .row.user-box
    .col-sm-6.col-sm-offset-3.col-md-4.col-md-offset-4
      h3.text-center= (item._id ? 'Edit Item Details' : 'Define New Item')
      hr.colorgraph
      form.new-item(id='id_' + item._id, action='#', method='post')
        fieldset
          .fields
            input#name(type='text', placeholder='Name', required, value=item.name, autofocus)
          .fields
            input#description(type='text', placeholder='Description', value=item.description, required)
          .fields
            input#picture(type='url', placeholder='picture url', value=item.picture)
          .fields
            input#value(type='text', placeholder='0.0', value=item.value)
          .fields
            .col-sm-6
              button.btn.btn-md.btn-primary.btn-block(type='reset')
                i.fa.fa-times
                |  Cancel
            .col-sm-6
              button.btn.btn-md.btn-success.btn-block.confirm(type='submit')
                i.fa.fa-check
                |  OK
