.container
  .row.user-box
    .col-sm-6.col-sm-offset-3.col-md-4.col-md-offset-4
      h3.text-center= (room._id ? 'Edit Room Details' : 'Define New Room')
      hr.colorgraph
      form.new-room(id='id_' + room._id, action='#', method='post')
        fieldset
          .fields
            input#name(type='text', placeholder='Name', required, value=room.name, autofocus)
          .fields
            input#description(type='text', placeholder='Description', value=room.description, required)
          .fields
            input#location(type='text', placeholder='Location', value=room.location, required)
          .fields
            input#picture(type='url', placeholder='picture url', value=room.picture)
          .fields
            input#size(type='text', placeholder='Room size' value=room.size)
          .fields
            .col-sm-6
              button.btn.btn-md.btn-primary.btn-block(type='reset')
                i.fa.fa-times
                |  Cancel
            .col-sm-6
              button.btn.btn-md.btn-success.btn-block.confirm(type='submit')
                i.fa.fa-check
                |  OK
